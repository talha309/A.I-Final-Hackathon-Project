{
  "info": {
    "name": "Campus Admin Agent API",
    "_postman_id": "1234-5678-91011",
    "description": "Postman Collection for testing all Campus Admin Agent endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://127.0.0.1:8000" },
    { "key": "token", "value": "" }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Admin Signup",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin@gmail.com\",\n  \"password\": \"12345\"\n}"
            },
            "url": "{{baseUrl}}/admin/signup"
          }
        },
        {
          "name": "Admin Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var data = pm.response.json();",
                  "if (data.access_token) {",
                  "   pm.collectionVariables.set('token', data.access_token);",
                  "   console.log('âœ… Token saved:', data.access_token);",
                  "}"
                ],
                "type": "text"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/x-www-form-urlencoded" }],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                { "key": "grant_type", "value": "password" },
                { "key": "username", "value": "admin@gmail.com" },
                { "key": "password", "value": "12345" }
              ]
            },
            "url": "{{baseUrl}}/admin/login"
          }
        }
      ]
    },
    {
      "name": "Students",
      "item": [
        {
          "name": "Create Student",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"josw\",\n  \"email\": \"jose@gmail.com\",\n  \"department\": \"CS\"\n}"
            },
            "url": "{{baseUrl}}/students"
          }
        },
        {
          "name": "List Students",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/students"
          }
        },
        {
          "name": "Update Student Email",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newemail@gmail.com\"\n}"
            },
            "url": "{{baseUrl}}/students/update-email?email=talha@gmail.com"
          }
        },
        {
          "name": "Delete Student",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/students/replace-with-id"
          }
        }
      ]
    },
    {
      "name": "Analytics",
      "item": [
        {
          "name": "Overview",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/analytics/overview"
          }
        },
        {
          "name": "Students by Department",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/analytics/departments"
          }
        },
        {
          "name": "Recent Onboardings",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/analytics/onboardings"
          }
        },
        {
          "name": "Activity Heatmap",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{baseUrl}}/analytics/activity"
          }
        }
      ]
    },
    {
      "name": "Chat",
      "item": [
        {
          "name": "Ask Chatbot",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"message\": \"Hello chatbot!\"\n}"
            },
            "url": "{{baseUrl}}/chat"
          }
        }
      ]
    }
  ]
}
